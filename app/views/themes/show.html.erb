<h1><%= @theme.title %></h1>

<% unless @theme.nil? %>
  <%= simple_format @theme.body %>
<% end %>
<hr>

<%= link_to '提出', new_theme_code_path(@theme), class: "btn btn-lg btn-primary" %>

<hr>

<h2>ランキング</h2>
<% if @codes %>
  <ol>
    <% @codes.each do |code| %>
      <% unless code.code_time.nil? %>
        <li>
          <%= link_to "time: #{code.code_time.time.to_s}[ms]", code_path(code) %>
          <%= link_to code.user.name, user_path(code.user), style: 'float: right' %>
          <% if  logged_in? && current_user.admin? %>
            | <%= link_to "delete", code, method: :delete,
                          data: { confirm: "You sure?" } %>
          <% end %>
        </li>
        <hr>
      <% end %>
    <% end %>
  </ol>
<% else %>
  <p>提出済みのコードはありません</p>
<% end %>
