<h1>Login</h1>

<%= form_with url: login_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit 'Login', class: 'btn btn-primary' %>
<% end %>

<p>New user? <%= link_to "Sign up", new_user_path %></p>
